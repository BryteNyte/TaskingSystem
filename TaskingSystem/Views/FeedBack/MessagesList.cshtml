@model TaskingSystem.Models.FeedbackModel
@using TaskingSystem.Models
@{
    Users id = Session["useDetails"] as Users;
}
@{
    Layout = null;
}
@if (Model.Items != null)
{

    foreach (var item in Model.Items)
    {
        if (item.fdbStatusType == 1)
        {
            if (id.useID == item.fdbCreatedBy)
            {
                <div style="padding: 10px 15px">
                    <div style="height:18px">
                        <div style="float: right;margin-right: 0;margin-left: 10px;display: inline-block;font-weight: bold;">
                            @item.fdbCreatedBy_Name
                        </div>
                        <div style="margin-top: 2px;float: right;margin-right: 0;margin-left: 10px;font-size: .8em;color: #666;">
                            @item.fdbDateCreated
                        </div>
                    </div>
                    <div style="background-color: #a2afc3;margin-left: 10%;margin-right: 0;margin-top: 10px;border-radius: 3px;color: #fff;padding: 10px;position: relative;">
                        @item.fdbFeedBack
                        <br />
                        <br />
                        <strong>
                            Time Taken: @item.fdbTimeTaken (mins)
                        </strong>
                    </div>
                </div>


            }
            else
            {
                <div style="padding: 10px 15px">
                    <div style="height:18px">
                        <div style="float: right;margin-right: 0;margin-left: 10px;display: inline-block;font-weight: bold;">
                            @item.fdbCreatedBy_Name
                        </div>
                        <div style="margin-top: 2px;float: right;margin-right: 0;margin-left: 10px;font-size: .8em;color: #666;">
                            @item.fdbDateCreated
                        </div>
                    </div>
                    <div style="background-color: #c4daad;margin-left: 10%;margin-right: 0;margin-top: 10px;border-radius: 3px;color: #fff;padding: 10px;position: relative;">
                        @item.fdbFeedBack
                        <br />
                        <br />
                        <strong>
                            Time Taken: @item.fdbTimeTaken (mins)
                        </strong>
                    </div>
                </div>
            }
        }


        if (item.fdbStatusType == 2)
        {
            <div style="padding: 10px 15px">
                <div>
                    <div style="height:18px">
                        <div style="margin-right: 0;margin-left: 0px;display: inline-block;font-weight: bold;">
                            @item.fdbCreatedBy_Name
                        </div>
                        <div style="margin-top: 2px;margin-right: 0;margin-left: 10px;font-size: .8em;color: #666;display: inline-block;">
                            @item.fdbDateCreated
                        </div>
                    </div>

                    <div style="background-color: #3c3d25;margin-left: 0;margin-right: 0;margin-top: 10px;border-radius: 3px;color: #fff;padding: 10px;position: relative;">
                        Status Changed: @item.fdbFeedBack

                    </div>
                </div>
            </div>
        }


    }
}




