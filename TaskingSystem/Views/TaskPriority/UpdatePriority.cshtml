@model TaskingSystem.Models.PriorityModel
@using TaskingSystem.Models
@{
    ViewBag.Title = "Update Priority Details";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    @using (Html.BeginForm("UpdatePriority", "TaskPriority", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-horizontal form-validation" style="margin-top:20px;">
            @Html.HiddenFor(model => model.ptyID)
            <div class="row">
                <section class="panel panel-primary">
                    <header class="panel-heading">
                        <h2 class="panel-title">Basic Info</h2>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Priority Name: </label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.ptyName, new { htmlAttributes = new { @class = "form-control focused", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.ptyName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" style="text-align: center">
                        <input type="submit" class="btn btn-primary" value="Save" />
                        <a type="reset" class="btn btn-default" onclick="return confirm('Changes will be lost')" href="~/TaskPriority/Priority_Details">Cancel</a>
                    </div>
                </section>
            </div>
        </div>
    }
    @section scripts{
        <script src="~/vendors/jquery/dist/jquery.min.js"></script>
        <script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/Scripts/chosen.jquery.min.js"></script>
        <script src="~/build/js/custom.min.js"></script>
    }
</body>
</html>
