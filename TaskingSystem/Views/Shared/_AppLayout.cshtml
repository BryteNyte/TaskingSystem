@using TaskingSystem.Models
<!DOCTYPE html>
@{
    if (Session["useDetails"] == null)
    {
        Response.Redirect("~/Login/Login");
    }
    Users type = Session["useDetails"] as Users;

}
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
    <link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />
    <link href="~/build/css/custom.min.css" rel="stylesheet">
    <link href="~/Content/Layout-Colors.css" rel="stylesheet" />


    @RenderSection("Styles", false)


</head>

<body class="nav-md" style="font-size:13px;">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><i class="fa fa-paw"></i> <span>Gentelella Alela!</span></a>
                    </div>

                    <div class="clearfix"></div>
                    <br />
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>Navigation</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a href="~/Tasks/Tasks"><i class="fa fa-tasks"></i> Tasks </a>
                                </li>
                                <li>
                                    <a><i class="fa fa-bar-chart"></i> Reports <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="~/Reports/TasksReports">Tasks - Reports</a></li>
                                        <li><a href="~/Reports/TaskReportDetails">Tasks - Details</a></li>
                                    </ul>
                                </li>

                                <li>
                                    <a><i class="fa fa-users"></i> Users <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="~/Users/User_Details">Users</a></li>

                                    </ul>
                                </li>
                                @*@if (type.useAccessLvl == 1 || type.useAccessLvl == 2)
                                {
                                    <li>
                                        <a><i class="fa fa-users"></i> Suppliers <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu">
                                            <li><a href="~/Suppliers/Suppliers">Suppliers</a></li>

                                        </ul>
                                    </li>


                                }*@
                                <li>
                                    <a><i class="fa fa-building-o"></i> Companies <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="~/Companies/CompanyConnections">Connect With Company</a></li>

                                    </ul>
                                </li>
                                @if (Session["useDetails"] != null)
                                {
                                    if (type.useAccessLvl == 1 || type.useAccessLvl == 2)
                                    {
                                        <li>
                                            <a><i class="fa fa-book"></i> Admin <span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">
                                                <li><a href="~/AdminCompany/AdminCompany_Details">Company</a></li>
                                                <li><a href="~/AdminLevels/Admin_Details">Access Levels</a></li>
                                                <li><a href="~/TaskType/Type_Details">Task Type</a></li>
                                                <li><a href="~/TaskPriority/Priority_Details">Priority Type</a></li>

                                            </ul>
                                        </li>
                                    }

                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">
                            <li class="">

                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    @*<img src="http://tchstaging.dedicated.co.za:8087/RetrieveImage.ashx?id= @ViewBag.ID" style="width:30px" />  @ViewBag.request*@
                                    <img src="http://localhost:59103/@type.useImageName" style="width:30px" />@type.useName
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="javascript:;"> Profile</a></li>
                                    <li><a href="@Url.Action("LogOut","Login")"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>@ViewBag.Title</h3>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
                @RenderBody()
            </div>
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/vendors/moment/min/moment.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
